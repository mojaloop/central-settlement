    },
    "bugs": "http://github.com/mojaloop/central-settlement/issues",
    "publishConfig": {
        "registry": "https://registry.npmjs.org"
    },
    "dependencies": {
        "@hapi/boom": "7.4.2",
        "@hapi/catbox-memory": "4.1.0",
        "@hapi/hapi": "18.3.1",
        "@mojaloop/central-ledger": "5.2.1",
        "@mojaloop/central-services-auth": "5.2.1",
        "@mojaloop/central-services-database": "5.2.1",
        "@mojaloop/central-services-error-handling": "7.1.2",
        "@mojaloop/central-services-health": "7.0.0",
        "@mojaloop/central-services-shared": "6.4.1",
        "@mojaloop/central-services-stream": "6.2.2",
        "@mojaloop/forensic-logging-client": "5.2.0",
        "hapi-openapi": "1.2.2",
        "hapi-pagination": "2.1.0",
        "mustache": "3.0.1",
        "rc": "1.2.8",
        "uuid4": "1.1.4"
    },
    "devDependencies": {
        "@hapi/joi": "15.1.0",
        "bluebird": "3.5.5",
        "eslint": "6.0.1",
        "faucet": "0.0.1",
        "istanbul": "1.1.0-alpha.1",
        "npm-audit-resolver": "1.5.0",
        "node-fetch": "2.6.0",
        "nodemon": "1.19.1",
        "pre-commit": "1.2.2",
        "proxyquire": "2.1.1",
        "rewire": "4.0.1",
        "sinon": "7.3.2",
        "standard": "13.0.2",
        "swagmock": "1.0.0",
        "tap-xunit": "2.4.1",
        "tape": "4.11.0",
        "tapes": "4.1.0"
    },
    "scripts": {
        "start": "node src/server.js",
        "dev": "nodemon src/server.js",
        "pretest": "standard",
        "standard": "standard",
        "test": "npm run test:unit | faucet",
        "test:unit": "tape 'test/unit/**/*.js'",
        "test:xunit": "tape 'test/unit/**/*.js' | tap-xunit",
        "cover": "istanbul cover tape -- 'test/unit/**/*.js'",
        "lint": "eslint .",
        "test:coverage-check": "npm run test:coverage && istanbul check-coverage",
        "test:coverage": "istanbul cover tape -- 'test/unit/**/*.js'",
        "test:int": "tape 'test/integration/**/*.test.js'",
        "test:integration": "sh ./test/integration-runner.sh ./test/integration-runner.env",
        "regenerate": "yo swaggerize:test --framework hapi --apiPath './src/interface/swagger.json'",
        "audit:resolve": "SHELL=sh resolve-audit",
        "audit:check": "SHELL=sh check-audit"
    },
    "generator-swaggerize": {
        "version": "4.1.0"
    },
    "main": "./server"
}
