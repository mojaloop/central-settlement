        "registry": "https://registry.npmjs.org"
    },
    "engines": {
        "node": "=16.x"
    },
    "dependencies": {
        "@hapi/basic": "6.0.0",
        "@hapi/boom": "10.0.0",
        "@hapi/catbox-memory": "5.0.1",
        "@hapi/good": "9.0.1",
        "@hapi/hapi": "20.2.2",
        "@hapi/inert": "6.0.5",
        "@hapi/vision": "6.1.0",
        "@mojaloop/central-ledger": "v15.1.3",
        "@mojaloop/central-services-database": "10.7.0",
        "@mojaloop/central-services-error-handling": "12.0.4",
        "@mojaloop/central-services-health": "14.0.1",
        "@mojaloop/central-services-logger": "11.0.1",
        "@mojaloop/central-services-shared": "17.0.2",
        "@mojaloop/central-services-stream": "11.0.0",
        "@mojaloop/event-sdk": "11.0.2",
        "@mojaloop/ml-number": "11.2.1",
        "@now-ims/hapi-now-auth": "2.1.0",
        "async": "3.2.4",
        "async-retry": "1.3.3",
        "bignumber.js": "9.0.2",
        "blipp": "4.0.2",
        "hapi-auth-bearer-token": "8.0.0",
        "hapi-openapi": "3.0.0",
        "hapi-swagger": "14.5.5",
        "lodash": "4.17.21",
        "mustache": "4.2.0",
        "parse-strings-in-object": "2.0.0",
        "rc": "1.2.8",
        "uuid4": "2.0.2",
        "vm": "0.1.0"
    },
    "devDependencies": {
        "@hapi/joi": "17.1.1",
        "@mojaloop/central-services-metrics": "12.0.5",
        "@types/lodash": "4.14.182",
        "ajv": "8.11.0",
        "ajv-keywords": "5.1.0",
        "axios": "0.27.2",
        "bluebird": "3.7.2",
        "chai": "4.3.6",
        "chai-exclude": "2.1.0",
        "chai-subset": "1.6.0",
        "eslint": "8.19.0",
        "faucet": "0.0.1",
        "get-port": "5.1.1",
        "jest": "28.1.3",
        "jest-junit": "14.0.0",
        "node-fetch": "3.2.8",
        "nodemon": "2.0.19",
        "npm-audit-resolver": "3.0.0-7",
        "npm-check-updates": "15.3.3",
        "nyc": "15.1.0",
        "pre-commit": "1.2.2",
        "proxyquire": "2.1.3",
        "replace": "^1.2.1",
        "rewire": "6.0.0",
        "sinon": "14.0.0",
        "standard": "17.0.0",
        "standard-version": "^9.5.0",
        "supertest": "6.2.4",
        "swagmock": "1.0.0",
        "tap-xunit": "2.4.1",
        "tape": "5.5.3",
        "tapes": "4.1.0"
    },
    "pre-commit": [
        "lint",
        "dep:check",
        "test:unit"
    ],
    "scripts": {
        "start": "run-p start:api",
        "start:api": "node src/api/index.js",
        "watch:api": "nodemon src/api/index.js",
        "start:handlers": "node src/handlers/index.js",
        "regenerate": "yo swaggerize:test --framework hapi --apiPath './src/interface/swagger.yaml'",
        "lint": "standard",
        "lint:fix": "standard --fix",
        "eslint": "eslint .",
        "test": "npm run test:unit | faucet",
        "test:all": "run-s test",
        "test:unit": "tape 'test/unit/**/*.test.js'",
        "test:xunit": "tape 'test/unit/**/*.test.js' | tap-xunit",
        "test:coverage": "nyc --reporter=lcov --reporter=text-summary tapes -- 'test/unit/**/**.test.js'",
        "test:coverage-check": "npm run test:coverage && nyc check-coverage",
        "test:int": "tape 'test/integration/**/*.test.js'",
        "test:integration": "sh ./test/integration-runner.sh ./test/integration-runner.env",
        "test:int:narrow": "jest --config './jest.integration.config.js' --coverage --runInBand --testMatch '**/test/int/**/*.(test|spec).js'",
        "audit:resolve": "resolve-audit --production",
        "audit:check": "check-audit --production",
        "dep:check": "npx ncu -e 2",
        "dep:update": "npx ncu -u",
        "release": "standard-version --releaseCommitMessageFormat 'chore(release): {{currentTag}} [skip ci]'",
        "snapshot": "standard-version --no-verify --skip.changelog --prerelease snapshot --releaseCommitMessageFormat 'chore(snapshot): {{currentTag}}'"
    },
    "generator-swaggerize": {
        "version": "4.1.0"
    },
    "main": "./server",
    "standard": {
        "ignore": [
            "test/unit/data/invalidFile/dummyFeeCalculationTestScriptInvalidFile.js"
        ]
    },
    "standard-version": {
        "scripts": {
            "postchangelog": "replace '\\[mojaloop/#(\\d+)\\]\\(https://github.com/mojaloop/(.*)/issues/(\\d+)\\)' '[mojaloop/#$1](https://github.com/mojaloop/project/issues/$1)' CHANGELOG.md"
        }
    }
}
